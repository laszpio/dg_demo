<form phx-change="search" class="search-form">
  <%= text_input :search_field, :q, autofocus: true %>
</form>

<table>
  <tbody id="results">
    <%= for result <- @results do %>
      <tr id="result-<%= result.id %>">
        <td>
          <%= result.title %><br>
          <%= result.authors %><br>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
